<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:padding="15dp"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/linotte_bold"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="Encrypto"
                    android:textColor="#424242"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/searchBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-60dp"
                    android:padding="15dp"
                    android:src="@drawable/search" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:gravity="left"
                        android:paddingLeft="30dp"
                        android:text="Encrypt : "
                        android:textColor="@color/md_grey_800"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/linotte_bold"
                        android:text="Original Text :"
                        android:textColor="#3c3737"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/blank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank_border"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="Text here.."
                        android:inputType="textMultiLine|text"
                        android:maxLength="100"
                        android:maxLines="5"
                        android:padding="13dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/md_grey_700"
                        android:textColorHint="#BDBDBD"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/md_grey_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/linotte_bold"
                        android:text="Converted Text :"
                        android:textColor="#3c3737"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/blank2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank_border"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="Result here.."
                        android:inputType="textMultiLine|text"
                        android:maxLength="100"
                        android:maxLines="5"
                        android:padding="13dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/md_grey_900"
                        android:textColorHint="#BDBDBD"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/md_grey_500" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_design"
                            android:elevation="0dp"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:text="Convert"
                            android:textColor="@color/md_white_1000"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/btnCopy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_design2"
                            android:elevation="0dp"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:text="Copy Text"
                            android:textColor="@color/md_grey_900"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:text="@string/warning"
                        android:textColor="@color/md_grey_500"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>