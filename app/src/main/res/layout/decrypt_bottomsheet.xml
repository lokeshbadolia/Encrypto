<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <View
            android:layout_width="35dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/round_box" />

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/linotte_semi_bold"
                    android:gravity="left"
                    android:paddingLeft="30dp"
                    android:text="Decrypt : "
                    android:textColor="@color/md_grey_800"
                    android:textSize="25dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/linotte_bold"
                        android:text="Converted Text :"
                        android:textColor="#3c3737"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/blank3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank_border"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="Text here.."
                        android:inputType="textMultiLine|text"
                        android:maxLength="100"
                        android:maxLines="5"
                        android:padding="13dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/md_grey_700"
                        android:textColorHint="#BDBDBD"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/md_grey_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/linotte_bold"
                        android:text="Original Text :"
                        android:textColor="#3c3737"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/blank4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blank_border"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:hint="Result here.."
                        android:maxLength="100"
                        android:maxLines="5"
                        android:padding="13dp"
                        android:inputType="textMultiLine|text"
                        android:scrollbars="vertical"
                        android:textColor="@color/md_grey_900"
                        android:textColorHint="#BDBDBD"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="180dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:background="@color/md_grey_500" />


                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/btn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_design"
                            android:elevation="0dp"
                            android:fontFamily="@font/linotte_semi_bold"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:text="Retrive Text"
                            android:textColor="@color/md_white_1000"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/linotte_semi_bold"
                        android:text="@string/warning2"
                        android:textColor="@color/md_grey_500"
                        android:textSize="15sp" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>